{
    "name": "mshell",
    "displayName": "mshell",
    "description": "Syntax highlighting and language support for the mshell concatenative shell language",
    "publisher": "MitchellPaulus",
    "version": "0.9.0",
    "engines": { "vscode": "^1.90.0" },
    "categories": ["Programming Languages"],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:mshell",
        "onCommand:mshell.runCurrentFile"
    ],
    "contributes": {
        "commands": [
            {
                "command": "mshell.runCurrentFile",
                "title": "mshell: Run Current File"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "mshell.runCurrentFile",
                    "group": "navigation",
                    "when": "resourceLangId == mshell"
                }
            ]
        },
        "debuggers": [
            {
                "type": "mshell",
                "label": "mshell",
                "languages": ["mshell"],
                "configurationAttributes": {
                    "launch": {
                        "required": ["program"],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to the mshell script."
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "mshell",
                        "request": "launch",
                        "name": "Run mshell file",
                        "program": "${file}"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "mshell: Run current file",
                        "description": "Run the active mshell file.",
                        "body": {
                            "type": "mshell",
                            "request": "launch",
                            "name": "Run mshell file",
                            "program": "${file}"
                        }
                    }
                ]
            }
        ],
        "languages": [
            {
                "id": "mshell",
                "aliases": ["msh"],
                "extensions": [".msh", ".mshell"],
                "firstLine": "^#!.*\\b(mshell|msh)\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mshell",
                "scopeName": "source.mshell",
                "path": "./syntaxes/mshell.textmate.json"
            }
        ],
        "configurationDefaults": {
            "[mshell]": {
                "editor.insertSpaces": true,
                "editor.tabSize": 2
            }
        },
        "configuration": {
            "title": "mshell",
            "properties": {
                "mshell.lspPath": {
                    "type": "string",
                    "default": "msh",
                    "description": "Path to the msh executable for the language server"
                },
                "mshell.mshPath": {
                    "type": "string",
                    "default": "msh",
                    "description": "Path to the msh executable for running scripts"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.90.0",
        "typescript": "^5.3.3"
    },
    "repository": { "type": "git", "url": "https://github.com/mitchpaulus/mshell" },
    "bugs": { "url": "https://github.com/mitchpaulus/mshell" },
    "license": "MIT"
}
