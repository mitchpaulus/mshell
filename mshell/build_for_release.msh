#!/usr/bin/env mshell

# GOOS        GOARCH
# android     arm
# darwin      386
# darwin      amd64
# darwin      arm
# darwin      arm64
# dragonfly   amd64
# freebsd     386
# freebsd     amd64
# freebsd     arm
# linux       386
# linux       amd64
# linux       arm
# linux       arm64
# linux       ppc64
# linux       ppc64le
# linux       mips
# linux       mipsle
# linux       mips64
# linux       mips64le
# netbsd      386
# netbsd      amd64
# netbsd      arm
# openbsd     386
# openbsd     amd64
# openbsd     arm
# plan9       386
# plan9       amd64
# solaris     amd64
# windows     386
# windows     amd64

soe

"0" $CGO_ENABLED!

def build_os_arch (--)
    list! @list :0: $GOOS! @list :1: $GOARCH! @list :2: $BIN_NAME!
    $"Working on {$GOOS} {$GOARCH}" wl
    [go build -o $"bin/{$GOOS}_{$GOARCH}/{$BIN_NAME}"];
    [cp ../lib/std.msh $"bin/{$GOOS}_{$GOARCH}/std.msh"];
    [tar -C $"bin/{$GOOS}_{$GOARCH}" -czf $"bin/{$GOOS}_{$GOARCH}.tar.gz" $"{$BIN_NAME}" std.msh];
end

[
    ['linux' 'amd64' 'msh']
    ['linux' 'arm' 'msh']
    ['linux' 'arm64' 'msh']
    ['linux' '386' 'msh']
    ['windows' 'amd64' 'msh.exe']
    ['darwin' 'amd64' 'msh']
    ['darwin' 'arm64' 'msh']
]

(build_os_arch) each
